@page
@{ Layout = "_Layout"; }

<el-card>
  <div slot="header" class="clearfix">
    <span>内容点击量设置</span>
  </div>

  <el-form ref="form" :model="form" size="small" status-icon label-width="260px">

    <el-form-item label="是否启用点击量统计">
      <el-radio v-model="form.isHitsDisabled" :label="false">启用点击量统计</el-radio>
      <el-radio v-model="form.isHitsDisabled" :label="true">禁用点击量统计</el-radio>
      <div class="tips">选择禁用点击量统计，原有数据仍将保留</div>
    </el-form-item>
    <el-form-item label="点击量统计方式" v-if="!form.isHitsDisabled">
      <el-radio v-model="form.isHitsCountByDay" :label="false">仅统计总点击量</el-radio>
      <el-radio v-model="form.isHitsCountByDay" :label="true">统计总点击量以及本日、本周、本月点击量</el-radio>
    </el-form-item>

  </el-form>

  <el-divider></el-divider>
  <div style="height: 10px"></div>
  
  <el-row>
    <el-col :span="24" align="center">
      <el-button type="primary" v-on:click="btnSubmitClick" size="small">保 存</el-button>
    </el-col>
  </el-row>

</el-card>

@section Scripts{
<script src="index.js" type="text/javascript"></script>
}
