<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <Content Update="wwwroot\**\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\SSCMS\SSCMS.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if not exist $(SolutionDir)\src\SSCMS.Web\plugins\$(ProjectName) mkdir $(SolutionDir)\src\SSCMS.Web\plugins\$(ProjectName)&#xD;&#xA;xcopy $(OutDir)*.* $(SolutionDir)\src\SSCMS.Web\plugins\$(ProjectName) /e /y" />
  </Target>

</Project>